{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "bundler",
		"target": "es2022",
		"typeRoots": ["./types", "./node_modules/@types"],
		"noEmit": true,
		"isolatedModules": true
	},
	"include": ["src/**/*", "test/**/*", "types/*.d.ts"],
	"exclude": ["**/coverage", "test/e2e/workspace"]
}
